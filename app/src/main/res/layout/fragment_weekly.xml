<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/week_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="10pt"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/prev_week_btn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/week_text"
            android:layout_centerVertical="true"
            android:background="@drawable/previous"/>

        <ImageButton
            android:id="@+id/next_week_btn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/week_text"
            android:layout_centerVertical="true"
            android:background="@drawable/next"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/schedule_box">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/week_date1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/week_day1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"/>

            </LinearLayout>

            <ListView
                android:id="@+id/week_list1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

